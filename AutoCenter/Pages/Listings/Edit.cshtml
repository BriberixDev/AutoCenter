                <select asp-for="Listing.VehicleSpecs.BodyType" class="form-control"></select>
                <span asp-validation-for="Listing.VehicleSpecs.BodyType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

