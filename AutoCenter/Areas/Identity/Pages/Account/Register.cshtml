@page
@model AutoCenter.Web.Areas.Identity.Pages.Account.RegisterModel
@{
}
<h3>User Registration</h3>
<br />
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Input.UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Input.UserName" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.UserName"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Input.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Input.Email" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.Email"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Input.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Input.Password" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.Password"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
            <div class="col-5">
                <a class="btn btn-link" href="./Login">Already have an account? Login</a>
            </div>
        </div>
    </form>
</div>