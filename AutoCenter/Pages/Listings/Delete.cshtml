@page
@model AutoCenter.Web.Pages.Listings.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<div>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>@Model.Listing.Title</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Year</dt>
            <dd class="col-sm-10">@Model.Listing.VehicleSpecs.Year</dd>
            <dt class="col-sm-2">Make</dt>
            <dd class="col-sm-10">@Model.Listing.VehicleSpecs.Make</dd>
            <dt class="col-sm-2">Model</dt>
            <dd class="col-sm-10">@Model.Listing.VehicleSpecs.Model</dd>
            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@Model.Listing.Price.ToString("C")</dd>
        </dl>
        <form method="post">
            <input type="hidden" asp-for="Listing.Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

