@using AutoCenter.Web.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    var isAuth = User?.Identity?.IsAuthenticated == true;
    string imgSrc = Url.Content("~/images/default-avatar.png");

    if (isAuth)
    {
        var currentUser = await UserManager.GetUserAsync(User);

        if (currentUser?.ProfilePicture is { Length: > 0 })
        {
            var base64 = Convert.ToBase64String(currentUser.ProfilePicture);
            imgSrc = $"data:image/png;base64,{base64}";
        }
    }
}

<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm fixed-top">
        <div class="container py-1">
            <a class="navbar-brand d-flex align-items-center" asp-page="/Home">
                <span class="fw-bold text-light fs-4">AutoCenter</span>
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link text-light" asp-page="/Home">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-light" asp-page="/Listings/SearchListings">Buy</a></li>
                    <li class="nav-item"><a class="nav-link text-light" asp-page="/News">News</a></li>
                    <li class="nav-item"><a class="nav-link text-light" asp-page="/Favourites">Favourites</a></li>

                    @if (isAuth)
                    {
                        <li class="nav-item dropdown ms-lg-3 d-flex align-items-center">
                            <button class="nav-link dropdown-toggle p-0 border-0 bg-transparent"
                                    type="button"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false"
                                    aria-label="Account menu">
                                <img src="@imgSrc"
                                     alt="Profile"
                                     class="rounded-circle border border-light"
                                     height="40" width="40"
                                     style="object-fit:cover;cursor:pointer;">
                            </button>

                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Index">
                                        Profile
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="px-3">
                                        <button type="submit" class="btn btn-link p-0 text-decoration-none">
                                            Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ms-lg-3">
                            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div style="height:75px;"></div>
</header>
