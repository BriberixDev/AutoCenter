<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].Vehicle.Brand)
            </th>
