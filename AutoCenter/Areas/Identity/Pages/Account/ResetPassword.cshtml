@page
@model AutoCenter.Web.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Your Password";
}
@section Styles {
    <link rel="stylesheet" href="~/css/pages/account/ForgotPassword.css" asp-append-version="true" />
}
<div class="card">
    <div class="main">
        <h3>Reset your password</h3>
        <p>Set a new password for your account.</p>
    </div>

    <form method="post" class="form">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="Input.Email" />
        <input type="hidden" asp-for="Input.Code" />

        <div class="field">
            <label class="field__label" asp-for="Input.Password">New password</label>
            <input asp-for="Input.Password"
                   class="field__input"
                   type="password"
                   autocomplete="new-password"
                   required />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="field">
            <label class="field__label" asp-for="Input.ConfirmPassword">Confirm password</label>
            <input asp-for="Input.ConfirmPassword"
                   class="field__input"
                   type="password"
                   autocomplete="new-password"
                   required />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-full">
            Reset password
        </button>
    </form>
</div>