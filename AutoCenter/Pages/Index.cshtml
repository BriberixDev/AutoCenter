@page "/SearchListings"
@model IndexModel
@{
    ViewData["Title"] = "AutoCenter – Find your next car";
}

<div class="search-container">
    <div class="search-header">
        <h5>Find Your Next Car</h5>
        <span class="text-muted small">Over @Model.Listings.Count results</span>
    </div>

    <div class="search-form">
        <partial name="_Search" model="Model.Filters" />
    </div>

    <div class=car-gallery>
        @if (Model.Listings?.Any() == true)
        {
            foreach (var listing in Model.Listings)
            {
                @await Html.PartialAsync("_CarCard", listing)
            }
        }
        else
        {
            <div class="alert alert-light border text-center py-4">
                <h6 class="mb-0 text-muted">No listings found</h6>
            </div>
        }
    </div>
</div>