        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Listing) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Vehicle.Brand)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Vehicle.CarModel)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Vehicle.Year)
            </td>
            <td>
                    @* @Html.DisplayFor(modelItem => item.Vehicle.Color) *@
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Vehicle.Mileage)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Vehicle.Vin)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Vehicle.Transmission)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Vehicle.FuelType)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Vehicle.BodyType)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
