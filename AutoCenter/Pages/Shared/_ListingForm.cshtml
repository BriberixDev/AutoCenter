@model AutoCenter.Web.Pages.Listings.CreateListingInputModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    var brandOptions = (IEnumerable<SelectListItem>)ViewData["BrandOptions"];
    var modelOptions = (IEnumerable<SelectListItem>)ViewData["ModelOptions"] ?? Enumerable.Empty<SelectListItem>();
}

<div class="row">
    <div class="col-md-6">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" cols="20" rows=" 7"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" type="number" step="10" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="mb-3">
                <label asp-for="BrandId" class="form-label"></label>
                <select id="brandSelect" asp-for="BrandId"
                        asp-items="brandOptions" class="form-select">
                    <option value="">— Choose brand —</option>
                </select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ModelId" class="form-label"></label>
                <select id="modelSelect" asp-for="ModelId"
                        asp-items="modelOptions" class="form-select">
                    <option value="">— Choose model —</option>
                </select>
                <span asp-validation-for="ModelId" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Year" class="form-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="Mileage" class="form-label"></label>
                <input asp-for="Mileage" class="form-control" />
                <span asp-validation-for="Mileage" class="text-danger"></span>
            </div>
            @* <div class="col-md-4 mb-3">
                <label asp-for="Color" class="form-label"></label>
                <select asp-for="Color" asp-items="Html.GetEnumSelectList<AutoCenter.Web.Enums.VehicleSpecColor>()" class="form-select">
                    <option value="">— Choose color —</option>
                </select>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div> *@
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Transmission" class="form-label"></label>
                <select asp-for="Transmission" asp-items="Html.GetEnumSelectList<AutoCenter.Web.Enums.TransmissionType>()" class="form-select">
                    <option value="">— Choose transmission —</option>
                </select>
                <span asp-validation-for="Transmission" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="FuelType" class="form-label"></label>
                <select asp-for="FuelType" asp-items="Html.GetEnumSelectList<AutoCenter.Web.Enums.FuelType>()" class="form-select">
                    <option value="">— Choose fuel —</option>
                </select>
                <span asp-validation-for="FuelType" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="BodyType" class="form-label"></label>
                <select asp-for="BodyType" asp-items="Html.GetEnumSelectList<AutoCenter.Web.Enums.BodyType>()" class="form-select">
                    <option value="">— Choose body —</option>
                </select>
                <span asp-validation-for="BodyType" class="text-danger"></span>
            </div>
        </div>

        @* <div class="form-check mb-3">
            <input class="form-check-input" asp-for="IsActive" />
            <label class="form-check-label" asp-for="IsActive"></label>
        </div> *@

    </div>
</div>

